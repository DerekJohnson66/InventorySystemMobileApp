<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.DetailedCategoryView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/d_category_view_name"
            android:layout_width="250dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:text="Category Name"
            android:textSize="20sp"
            android:textAlignment="center"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/d_category_view_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="428dp"
            app:layout_anchor="@id/d_category_view_recycler_view"
            app:layout_anchorGravity="center"
            tools:listitem="@layout/inventory_item_item" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <Button
                android:id="@+id/d_category_view_add_item_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="15dp"
                android:text="Add Item" />

            <Button
                android:id="@+id/d_category_view_edit_category_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="15dp"
                android:text="Edit Category"
                />
        </GridLayout>

    </LinearLayout>





</ScrollView>