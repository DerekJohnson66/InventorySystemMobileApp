<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:text="Add Item"
            android:layout_margin="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="20sp"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/add_item_title"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/edit_text_border"
            android:hint="Title"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Description"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/add_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:layout_margin="10dp"
            android:background="@drawable/edit_text_border"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Current Amount"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/add_item_current_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Current Amount"
            android:textSize="16sp"
            android:layout_margin="10dp"
            android:background="@drawable/edit_text_border"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Target Amount"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/add_item_target_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Target Amount"
            android:layout_margin="10dp"
            android:textSize="16sp"
            android:background="@drawable/edit_text_border"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max Amount"
            android:textSize="20sp"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/add_item_max_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Max Amount"
            android:layout_margin="10dp"
            android:background="@drawable/edit_text_border"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Min Amount"
            android:textSize="20sp"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/add_item_min_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Min Amount"
            android:layout_margin="10dp"
            android:background="@drawable/edit_text_border"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/add_item_save_button"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_margin="15dp"/>
        </GridLayout>
    </LinearLayout>
</ScrollView>